{
  "id": "default-guardrails-v1",
  "name": "Default Guardrails",
  "allow_tools": [
    "mcp-servicenow",
    "mcp-slack",
    "mcp-zoom",
    "mcp-search",
    "mcp-gdrive",
    "mcp-github",
    "local",
    "local-llm"
  ],
  "deny_domains": [
    "pastebin.com",
    "anonymous file hosts"
  ],
  "pii_filters": [
    "email",
    "phone",
    "access_token",
    "api_key"
  ],
  "rate_limits": {
    "mcp-servicenow": {
      "rpm": 30
    },
    "mcp-slack": {
      "rpm": 60
    }
  },
  "max_consecutive_failures": 2,
  "on_violation": "halt-and-notify"
}
